# Backend environment variables for SportHub API
# Copy this file to .env and adjust values as needed

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# CORS
# Use the frontend URL in development, e.g. http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Auth (optional for local dev)
# Generate a strong secret for JWT signing if auth is enabled
JWT_SECRET=change_me_to_a_long_random_string

